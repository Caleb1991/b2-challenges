<h1><%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_experience %></p>
<p>Rides Currently Working On:</p>
<% @open_rides.each do |ride| %>
<%= ride %>
<% end %>
<h3>Add a Ride to Their Workload:</h3>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, local: true do |f| %>
<%= f.label :ride_id, 'Ride Id:' %>
<%= f.text_field :ride_id %>
<%= f.submit 'Submit' %>
<% end %>
